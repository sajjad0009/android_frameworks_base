<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="fill_horizontal|center"
        android:id="@android:id/background"
        android:left="10.0dip"
        android:right="10.0dip">
        <shape
            android:tint="@color/tint_Brightness_slider_like_A12"
            android:shape="rectangle">
            <size
                android:height="7.5dip" />
            <solid
                android:color="@color/color_Brightness_slider_like_A12" />
            <corners
                android:radius="@dimen/rounded" />
        </shape>
    </item>
    <item
        android:gravity="fill_horizontal|center"
        android:id="@android:id/progress"
        android:height="37.5dip">
        <scale
            android:scaleWidth="100%">
            <selector
                android:exitFadeDuration="@android:integer/config_mediumAnimTime">
                <item
                    android:state_pressed="true"
                    android:drawable="@drawable/seekbar_progress_drawable" />
                <item
                    android:state_pressed="false"
                    android:drawable="@drawable/seekbar_progress_drawable" />
            </selector>
        </scale>
    </item>
</layer-list>