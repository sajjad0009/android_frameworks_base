<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="center_vertical"
    android:paddingLeft="0.0dip"
    android:paddingRight="0.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    style="@style/BrightnessDialogContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/brightness_level"
        android:background="@drawable/abc_slice_see_more_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_flower"
        android:scaleType="centerInside"
        android:layout_marginStart="10.0dip"
        android:layout_marginEnd="0.0dip" />
    <ImageButton
        android:layout_gravity="center_vertical"
        android:id="@+id/brightness_left"
        android:background="?android:selectableItemBackgroundBorderless"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:src="@drawable/ic_brightness_left"
        android:contentDescription="@null" />
    <com.android.systemui.settings.ToggleSliderView
        android:layout_gravity="center_vertical"
        android:id="@+id/brightness_slider"
        android:layout_width="0.0dip"
        android:layout_height="48.0dip"
        android:layout_weight="1.0"
        android:contentDescription="@string/accessibility_brightness"
        android:importantForAccessibility="no"
        android:layout_marginStart="-10.0dip"
        android:layout_marginEnd="-10.0dip"
        app:text="@string/status_bar_settings_auto_brightness_label" />
    <ImageButton
        android:layout_gravity="center_vertical"
        android:id="@+id/brightness_right"
        android:background="?android:selectableItemBackgroundBorderless"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:src="@drawable/ic_brightness_right"
        android:contentDescription="@null" />
    <ImageButton
        android:layout_gravity="center_vertical"
        android:id="@+id/brightness_icon"
        android:background="@drawable/abc_slice_see_more_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_qs_brightness_auto_off"
        android:contentDescription="@null"
        android:layout_marginStart="10.0dip"
        android:layout_marginEnd="10.0dip" />
</LinearLayout>